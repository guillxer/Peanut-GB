void *memmove(void *dest, const void *src, size_t n) {
    char *d = (char *)dest;
    const char *s = (const char *)src;

    if (d < s) {
        // Copy forwards (from start to end)
        while (n--) {
            *d++ = *s++;
        }
    } else {
        // Copy backwards (from end to start)
        char *lasts = (char *)s + (n - 1);
        char *lastd = (char *)d + (n - 1);
        while (n--) {
            *lastd-- = *lasts--;
        }
    }
    return dest;
}
